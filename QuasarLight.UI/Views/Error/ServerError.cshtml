@model HandleErrorInfo

@{
    ViewBag.Title = "Page not found";
}

<div id="error-container">
    <div class="error-page server-error"></div>
    <div class="error-options">
        <h3><i class="fa fa-chevron-circle-left text-muted"></i> @Html.ActionLink("Назад", "Index", "Home")</h3>
    </div>
    <div class="row error-background">
        <div class="col-sm-8 col-sm-offset-2 text-center">
            <h1><i class="fa fa-cog fa-spin text-danger"></i> 500</h1>
            <h2 class="h3">Опять катаешь ДХ на Стелсе?</h2>
        </div>
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <form action="" method="post">
                <input type="text" id="search-term" name="search-term" class="form-control input-lg" placeholder="Найти что-нибудь полезное..">
            </form>
        </div>
    </div>
</div>