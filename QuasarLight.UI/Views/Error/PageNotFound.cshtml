@model HandleErrorInfo

@{
    ViewBag.Title = "Page not found";
}

<div id="error-container">
    <div class="error-page page-not-found"></div>
    <div class="error-options">
        <h3><i class="fa fa-chevron-circle-left text-muted"></i> @Html.ActionLink("Назад", "Index", "Home")</h3>
    </div>
    <div class="row error-background">
        <div class="col-sm-8 col-sm-offset-2 text-center">
            <h1 class="animation-pulse"><i class="fa fa-exclamation-triangle text-warning"></i> 404</h1>
            <h2 class="h3">Тысячи сломанных рам, куда я попал?!</h2>
        </div>
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <form action="" method="post">
                <input type="text" id="search-term" name="search-term" class="form-control input-lg" placeholder="Найти что-нибудь полезное..">
            </form>
        </div>
    </div>
</div>